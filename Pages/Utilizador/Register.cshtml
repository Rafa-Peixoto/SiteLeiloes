@page "/"
@model SiteLeiloes.Pages.Utilizador.RegisterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carense</title>
    <link href="~/css/register.css" rel="stylesheet">
    <script src="~/js/register.js"></script>
</head>
<body>
    <div class="logo-container">
        <img src="~/images/carensesimbolo.png" alt="Logotipo Carense" class="logo-normal">
    </div>
    <div class="container">
        <div class="box">
            <h2>Registrar</h2>
            <form id="registerForm" method="post">
                <div class="input-box">
                    <input asp-for="Input.Username" required="" placeholder="Username">
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="Input.Email" required="" placeholder="Email">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="Input.Password" type="password" required="" placeholder="Password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="Input.ConfirmPassword" type="password" required="" placeholder="Confirm Password">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button type="submit" class="submit-btn">Enviar</button>
            </form>
            <a href="#" class="account-link">Já possui conta?</a>
        </div>
    </div>
</body>
</html>

                    